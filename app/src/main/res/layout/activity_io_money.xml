<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ioMoneyActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/edt_login_focused2"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="260dp">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="30dp"
            android:text="存款/取款"/>
        <LinearLayout
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <EditText
                android:id="@+id/editTextIOMoneyAmount"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:hint="金额"/>
            <Spinner
                android:id="@+id/spinnerIOMoneyCurrency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonIOMoneyIn"
                android:layout_margin="20dp"
                android:background="@drawable/btn_login"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="存款"/>
            <Button
                android:id="@+id/buttonIOMoneyOut"
                android:layout_margin="20dp"
                android:background="@drawable/btn_login"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="取款"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>